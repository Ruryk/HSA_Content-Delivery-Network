# Corefile

. {
    hosts {
        # Mapping domain names to localhost (127.0.0.1) for local testing
        127.0.0.1 load-balancer-1.cdn.local
        127.0.0.1 load-balancer-2.cdn.local
        127.0.0.1 node1.cdn.local
        127.0.0.1 node2.cdn.local
        127.0.0.1 node3.cdn.local
        127.0.0.1 node4.cdn.local
        fallthrough  # Allow unresolved queries to be forwarded
    }
    forward . 8.8.8.8  # Forward unresolved DNS queries to Google's public DNS
    log  # Log DNS queries and responses for debugging
}
